@model IEnumerable<CW.Models.Status>

@{
    ViewData["Title"] = "Index";
}

<h2>My Blog</h2>

<p>
    <a asp-action="Create">Create New Status</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePosted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Post)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePosted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StatusID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StatusID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StatusID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
